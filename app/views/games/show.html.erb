<% @game.game_questions.each do |game_question| %>
    <img src="<%= game_question.question.first_gif %>" alt="" height="600" width="600">
    <img src="<%= game_question.question.second_gif %>" alt="" height="600" width="600">
    <%= form_with(url: "/answer", method: "post") do %>
        <%= text_field_tag "game[answer]" %><br />
        <%= hidden_field_tag "game[game_id]", @game.id%>
        <%= hidden_field_tag "game[score]", @game.score%>
        <%= submit_tag("Answer") %>
    <% end %>
<% end %>

Your Score: <%= session[:score] || 0 %>